<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".quiz.QuizResults">

    <ImageView
        android:id="@+id/congratulationsIcon"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/failureIcon"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/congratulationsIcon"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="You've successfully completed a quiz"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/failureTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/failureIcon"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="There is always a next time :)"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/successTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/correctAnswersSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answers : 0"
            android:textColor="#00C853"
            android:visibility="gone"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/failureTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/correctAnswersFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answers : 0"
            android:textColor="#00C853"
            android:visibility="gone"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/startNewQuizButton"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:layout_margin="20dp"
        android:background="@drawable/round_back_green10"
        android:text="Start New Quiz"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>